<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReportadoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/btnReportado"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                layout="@layout/header_layout"
                ></include>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#2D64A5"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="Codigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_marginLeft="150dp"
                    android:textColor="#2D64A5"
                    android:layout_marginTop="25dp"
                    android:text="Fecha de creacion"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:text="SNC-00001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>3
                <TextView
                    android:layout_marginLeft="125dp"
                    android:textColor="#000000"
                    android:text="30 de Abril del 2019"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#2D64A5"
                    android:text="Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="245dp"
                    android:textColor="#2D64A5"
                    android:text="Estado"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:text="03:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:src="@drawable/img_22"
                    android:layout_weight="1"
                    android:layout_width="10dp"
                    android:layout_height="35dp"></ImageView>
            </LinearLayout>

            <TextView
                android:textColor="#2D64A5"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="SNC Identificado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:layout_marginTop="5dp"
                android:textColorHint="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#2D64A5"
                android:text="Proceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:layout_marginTop="5dp"
                android:textColorHint="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#2D64A5"
                android:text="Persona que registra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:layout_marginTop="5dp"
                android:textColorHint="#000000"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#2D64A5"
                    android:text="Descripcion del SNC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/img_23"
                    android:layout_width="15dp"
                    android:layout_height="20dp"></ImageView>
            </LinearLayout>


            <EditText
                android:layout_marginRight="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>

            <Button
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:text="REPORTAR"
                android:textColor="#FFFFFF"
                android:background="#1A3661"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Button>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</layout>