<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/header_layout"
            ></include>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:textSize="22dp"
            android:textColor="#1A3661"
            android:text="Nuevo Documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:textColor="#1A3661"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:text="Codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:textColorHint="#000000"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#1A3661"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:text="Nombre / DescripciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:textColorHint="#000000"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#1A3661"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:text="Proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:textColorHint="#000000"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#1A3661"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:text="Vigencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:textColorHint="#000000"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:textColor="#1A3661"
            android:layout_marginRight="60dp"
            android:textSize="15dp"
            android:layout_marginLeft="100dp"
            android:text="ADJUNTAR DOCUMENTO"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_marginLeft="90dp"
            android:text="Manual de Procedimientos.doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:layout_marginTop="50dp"
            android:text="SOLICITAR APROBACION"
            android:textColor="#FFFFFF"
            android:background="#1A3661"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>

</layout>
